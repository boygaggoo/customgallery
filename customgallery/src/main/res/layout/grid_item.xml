<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_height_grid_item"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/imagePhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_test" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/feed_size"
        android:background="@color/feed_color"
        android:layout_gravity="bottom"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:padding="@dimen/padding_16dp"
            android:textColor="@color/background_activity"
            android:layout_gravity="left"
            android:id="@+id/nameFolder"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/test_text"
            android:padding="@dimen/padding_16dp"
            android:layout_gravity="right"
            android:textColor="@color/background_activity"
            android:id="@+id/quantityPhotos"/>
    </FrameLayout>
</FrameLayout>